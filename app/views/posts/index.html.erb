<h1>Listing posts for user: <%= @user.login %></h1>

<table>
	<tr>
		<th>Id</th>
		<th>Title</th>
		<th>Text</th>
	</tr>
	
	<% @user.posts.each do |post|%>
		<tr>
			<td><%= post.id%></td>
			<td><%= post.title%></td>
			<td><%= post.text%></td>
			<td><%= link_to 'Edit', edit_user_post_path(post.user_id,post.id)%></td>
			<td><%= link_to 'Delete', user_post_path(post.user_id,post.id), method: :delete, data: {confirm: 'Are you sure?'}%></td>
			<td><%= link_to 'Comments', user_post_comments_path(post.user_id, post.id)%></td>
		</tr>
	<% end %>
</table>

<%= link_to 'Add Post', new_user_post_path(@user)%> |
<%= link_to 'Back to users', users_path %>
