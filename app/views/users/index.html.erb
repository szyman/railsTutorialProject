<h1>Listing users</h1>

<table>
	<tr>
		<th>Login</th>
		<th>email</th>
	</tr>
	
	<% @users.each do |user|%>
		<tr>
			<td><%= user.login%></td>
			<td><%= user.email%></td>
			<td> <%= link_to 'Show posts', user_posts_path(user.id)%></td>
		</tr>
	<% end %>
</table>

<%= link_to 'Add user', new_user_path(@user)%>
